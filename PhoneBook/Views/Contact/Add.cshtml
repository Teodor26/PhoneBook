@model PhoneBook.Models.Contact
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>

@using (Html.BeginForm("Add", "Contact", FormMethod.Post))
{
    @Html.LabelFor(x => x.FirstName, "Имя")
    <br />
    @Html.EditorFor(x => x.FirstName)
    <br /><br />
    @Html.LabelFor(x => x.LastName, "Фамилия")
    <br />
    @Html.EditorFor(x => x.LastName)
    <br /><br />
    @Html.LabelFor(x => x.Position, "Должность")
    <br />
    @Html.EditorFor(x => x.Position)
    <br /><br />


    <input type="submit" name="Добавить" />
}